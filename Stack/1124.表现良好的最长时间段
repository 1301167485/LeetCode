public static int longestWPI(int[] hours){
        int max = 0;
        int[] array = new int[hours.length];
        for (int i = 0; i < hours.length; i++) {
            array[i] = hours[i] > 8 ? 1:-1;
        }
        for (int i = 0; i < array.length; i++) {  
            int sum = 0;
            for(int j = i;j < array.length; j++){
                sum += array[j];
                if(sum>0)
                    max = (j-i+1)>max?(j-i+1):max;
            }
        }
        return max;
    }
